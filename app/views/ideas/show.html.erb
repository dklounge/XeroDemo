<div class="container"> 

  <h2><%= @idea.title %></h2>
  
  <p>
    <%= @idea.body %>
  </p>
  
  <p>
    <i>updated on <%= @idea.updated_at.to_date.to_formatted_s(:long) %></i>
  </p>

  <p>
    <%= link_to "Back to ideas", root_path %> |
    <%= link_to "Edit idea", idea_path(@idea) %> |
    <%= link_to "Delete idea", idea_path(@idea), method: :delete %>
  </p>

</div>