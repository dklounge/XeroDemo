<div class="container"> 

  <h2><%= @idea.title %></h2>
  
  <p>
    <%= @idea.body %>
  </p>

  <p>
    <i>updated on <%= @idea.updated_at.to_date.to_formatted_s(:long) %></i>
  </p>

  <h4>comment</h4>
  <%= render partial: 'ideas/comment', collection: @idea.comments %>

  <p>
    <%= link_to "Back to home", root_path %> |
    <%= link_to "Edit summary", edit_idea_path(@idea) %> |
    <%= link_to "Delete summary", idea_path(@idea), method: :delete, data: { confirm: "Are you sure you want to delete this summary?" } %>
  </p>

</div>